import java.util.*;

public class DungeonEscapeGame {
    static Scanner scanner = new Scanner(System.in);
    static int health = 100;
    static List<String> inventory = new ArrayList<>();
    static Random random = new Random();

    public static void main(String[] args) {
        System.out.println("ğŸ° Welcome to Dungeon Escape â€“ Level Up Edition!");
        System.out.println("You have " + health + " health.");
        System.out.println("You find a rusty sword and take it with you.");
        inventory.add("Rusty Sword");

        firstRoom();
        if (health > 0) {
            secondRoom();
        }

        if (health > 0) {
            finalRoom();
        }

        System.out.println("\nğŸ›‘ Game Over. Thanks for playing!");
    }

    static void firstRoom() {
        System.out.println("\nRoom 1: Two paths ahead. One smells like fire, the other like fresh air.");
        System.out.print("Do you go 'fire' or 'air'? ");
        String choice = scanner.nextLine().trim().toLowerCase();

        if (choice.equals("fire")) {
            System.out.println("ğŸ”¥ You enter a room with flames and lose 30 health.");
            health -= 30;
        } else if (choice.equals("air")) {
            System.out.println("ğŸŒ¬ You find a healing potion and gain 20 health.");
            health += 20;
            inventory.add("Healing Potion");
        } else {
            System.out.println("You trip on a stone and lose 10 health.");
            health -= 10;
        }

        showStats();
    }

    static void secondRoom() {
        System.out.println("\nRoom 2: A goblin jumps out!");
        System.out.print("Do you 'fight' or 'run'? ");
        String choice = scanner.nextLine().trim().toLowerCase();

        if (choice.equals("fight")) {
            if (inventory.contains("Rusty Sword")) {
                System.out.println("âš”ï¸ You slay the goblin using your sword but lose 20 health.");
                health -= 20;
                inventory.add("Goblin Key");
            } else {
                System.out.println("ğŸ˜µ You try to fight barehanded and get hurt badly.");
                health -= 50;
            }
        } else {
            int chance = random.nextInt(2);
            if (chance == 0) {
                System.out.println("ğŸ©¸ The goblin catches and stabs you. You lose 40 health.");
                health -= 40;
            } else {
                System.out.println("ğŸƒâ€â™‚ï¸ You successfully escape unharmed.");
            }
        }

        showStats();
    }

    static void finalRoom() {
        System.out.println("\nRoom 3: You reach the exit, but a locked gate blocks you.");

        if (inventory.contains("Goblin Key")) {
            System.out.println("ğŸ—ï¸ You use the Goblin Key to open the gate and escape!");
            System.out.println("ğŸ‰ CONGRATULATIONS! YOU WON!");
        } else {
            System.out.println("ğŸšª You try to break the door but hurt yourself.");
            health -= 30;
            if (health > 0) {
                System.out.println("You survive but are stuck forever... ğŸ•³");
            } else {
                System.out.println("You collapse from exhaustion. â˜ ï¸");
            }
        }

        showStats();
    }

    static void showStats() {
        System.out.println("â¤ï¸ Health: " + health);
        System.out.println("ğŸ’ Inventory: " + inventory);
    }
}
